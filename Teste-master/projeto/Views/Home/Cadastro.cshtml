
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-md-4">
		&nbsp;
	</div>
	<div class="col-md-4">
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">Cadastro</h3>
			</div>
			<div class="box-body">
				<form class="form-horizontal">
					<div class="box-body">
						<div class="form-group">
							<label for="inputNome" class="col-sm-2 control-label">Nome</label>

							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputNome" placeholder="Digite o seu nome">
							</div>
						</div>
						<div class="form-group">
							<label for="inputEmpresa" class="col-sm-2 control-label">Empresa</label>

							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputEmpresa" placeholder="Digite o nome da empresa">
							</div>
						</div>
						<div class="form-group">
							<label for="inputLinkdin" class="col-sm-2 control-label">Linkdin</label>

							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputLinkdin" placeholder="Digite seu Linkdin">
							</div>
						</div>
						<div class="form-group">
							<label for="inputEmail" class="col-sm-2 control-label">Usuário</label>

							<div class="col-sm-10">
								<input type="email" class="form-control" id="inputEmail" placeholder="Digite o login da conta">
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword" class="col-sm-2 control-label">Senha</label>

							<div class="col-sm-10">
								<input type="password" class="form-control" id="inputPassword" placeholder="Digite sua senha">
							</div>
						</div>
					</div>
					<div class="box-footer">
						<div class="col-md-9">
							&nbsp;
						</div>
						<button type="submit" class="btn btn-primary col-md-3">Ok</button>
					</div>
				</form>
			</div>
		</div>
	</div>

</div>